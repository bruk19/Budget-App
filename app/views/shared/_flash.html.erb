<% if notice %>
  <div class="alert alert-info mt-4" role="alert">
    <%= notice %>
    <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning mt-4" role="alert">
    <%= alert %>
    <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>